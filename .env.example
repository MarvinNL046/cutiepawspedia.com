# Database (NeonDB)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# StackAuth - Get these from https://app.stack-auth.com
NEXT_PUBLIC_STACK_PROJECT_ID=your-project-id
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your-publishable-client-key
STACK_SECRET_SERVER_KEY=your-secret-server-key

# Resend - Get this from https://resend.com
RESEND_API_KEY=re_xxxxx

# Short.io - Get these from https://short.io
SHORTIO_API_KEY=your-api-key
SHORTIO_DOMAIN=your-domain.short.io

# Mapbox - Get this from https://mapbox.com
NEXT_PUBLIC_MAPBOX_TOKEN=pk.xxxxx

# Jina AI - Get this from https://jina.ai
JINA_API_KEY=jina_xxxxx

# App Configuration
APP_BASE_URL=http://localhost:3000

# Ads Configuration (Google AdSense)
NEXT_PUBLIC_ADS_ENABLED=false
NEXT_PUBLIC_ADSENSE_CLIENT=ca-pub-xxxxx

# Ad Slot IDs (get from AdSense dashboard)
NEXT_PUBLIC_AD_SLOT_INFEED=1234567890
NEXT_PUBLIC_AD_SLOT_SIDEBAR=1234567891
NEXT_PUBLIC_AD_SLOT_DETAIL=1234567892
NEXT_PUBLIC_AD_SLOT_STICKY=1234567893
